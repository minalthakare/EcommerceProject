@model ModelClasses.Account.LoginVM



<div class="text-center d-flex justify-content-center vh-100 align-items-center position-relative"
     style="background-image: url('/MainImages/pexels-moose-photos-170195-1037993.jpg');
           background-size: cover; background-repeat: no-repeat; background-position: center;">

    <div class="row p-4 rounded-3 shadow-lg position-relative w-75"
         style="backdrop-filter: blur(15px); background: rgba(255, 255, 255, 0.2); border: 1px solid rgba(255, 255, 255, 0.3);">

        <!-- Login Form (Takes Full Width on Small Screens) -->
        <div class="col-lg-8 col-md-12 col-sm-12 p-4 rounded-3 border-0"
             style="backdrop-filter: blur(20px); background: rgba(255, 255, 255, 0.3); box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); border-radius: 15px;">

            <h2 class="text-center text-uppercase text-dark fw-bold">Login to your account</h2>
            <hr />
            <h6 class="text-center pb-2 text-uppercase text-dark">Login using social networks</h6>

            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="row">
                        <a href="#" class="col-4 text-center" style="text-decoration:none">
                            <i class="fab fa-facebook fa-lg text-primary"></i>
                        </a>
                        <a href="#" class="col-4 text-center" style="text-decoration:none">
                            <i class="fab fa-google fa-lg text-danger"></i>
                        </a>
                        <a href="#" class="col-4 text-center" style="text-decoration:none">
                            <i class="fab fa-linkedin fa-lg text-info"></i>
                        </a>
                    </div>
                </div>
            </div>

            <hr />
            <form asp-action="Login" method="post" asp-controller="Account" asp-route-returnUrl="@ViewData["returnUrl"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex justify-content-center align-items-center">
                    <div class="col-lg-8 col-sm-12 col-md-12">
                        <input placeholder="Email" asp-for="Email"
                               class="rounded-pill form-control text-dark border-1 border-light shadow-sm bg-white bg-opacity-75" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="d-flex justify-content-center align-items-center">
                    <div class="col-lg-8 col-sm-12 col-md-12 pb-3 password-section">
                        <input type="password" placeholder="Password" asp-for="Password"
                               class="rounded-pill form-control text-dark border-1 border-light shadow-sm bg-white bg-opacity-75" id="password-field" />
                        <i class="far fa-eye" id="hideShowPassword"></i>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary rounded-pill px-4 shadow" type="submit">Login</button>
                </div>
            </form>
        </div>

        <!-- Register Section (Now Responsive) -->
        <div class="col-lg-4 col-md-12 col-sm-12 p-4 rounded-3 border-0 text-center mt-lg-0 mt-3"
             style="backdrop-filter: blur(20px); background: rgba(255, 255, 255, 0.4); box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); border-radius: 15px;">
            <h6 class="text-dark">New user? Click below to register</h6>
            <a asp-action="Register" class="btn btn-outline-primary rounded-pill px-4 mt-3 shadow-sm"><strong>Register</strong></a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/ShowHidePassword.js"></script>
}


