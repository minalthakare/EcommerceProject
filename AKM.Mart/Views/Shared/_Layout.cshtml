@using AKM.Mart.Utility
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AKM.Mart</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Bootstrap & CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/AKM.Mart.styles.css" asp-append-version="true" />

    <!-- FontAwesome for Icons -->
    <script src="https://kit.fontawesome.com/63809a0212.js" crossorigin="anonymous"></script>

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .navbar {
            background-color: #0056b3;
            padding: 12px 0;
        }

        .navbar-brand img {
            height: 45px;
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
            transition: 0.3s;
        }

            .nav-link:hover {
                color: #ffcc00 !important;
            }

        .dropdown-menu {
            border-radius: 8px;
        }

        .cart-icon {
            position: relative;
            font-size: 20px;
            color: white;
        }

        .cart-badge {
            position: absolute;
            top: -5px;
            right: -10px;
            background: red;
            color: white;
            font-size: 12px;
            border-radius: 50%;
            padding: 3px 6px;
        }

        footer {
            background: #343a40;
            color: white;
            padding: 15px;
            text-align: center;
        }

        .social-icons a {
            color: white;
            margin: 0 10px;
            font-size: 18px;
            transition: 0.3s;
        }

            .social-icons a:hover {
                color: #ffcc00;
            }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-uppercase" asp-area="" asp-controller="Home" asp-action="Index">
                    AKM Mart
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="managementDropdown" role="button" data-bs-toggle="dropdown">
                                Management
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">Category</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Product</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Cart Icon with Count -->
                    <div class="d-flex align-items-center">
                        <a asp-controller="Cart" asp-action="CartIndex" class="nav-link cart-icon">
                            <i class="fas fa-shopping-cart"></i>
                            @if (HttpContextAccessor.HttpContext.Session.GetInt32(CartCount.sessionCount) != null)
                            {
                                var count = HttpContextAccessor.HttpContext.Session.GetInt32(CartCount.sessionCount);
                                <span class="cart-badge">@(count ?? 0)</span>
                            }
                        </a>
                    </div>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>


    <div class="container mt-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-5">
        <div class="container">
            <p>&copy; 2025 - AKM Mart | <a asp-controller="Home" asp-action="Privacy" class="text-light">Privacy</a></p>
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <!-- JavaScript & Bootstrap -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
