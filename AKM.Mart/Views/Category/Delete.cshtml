@model ModelClasses.Category



<div class="PaddingAll">
    <h2 class="text-danger">Delete Category</h2>
    <hr />
    <div class="PaddingAllWhite">
        <div class="row">
            <div class="col-12 p-3">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-1">
                        </div>
                        <div class="col-10">
                            <div class="row">
                                <div class="col-3 form-group">
                                    <label class="text-info">Category Name:</label>
                                </div>
                                <div class="col-9 form-group">
                                    <input asp-for="Name" class="form-control" disabled />
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-12 text-center">
                                    <h4 class="text-danger">Are you sure you want to delete this category?</h4>
                                </div>
                            </div>

                            <div class="row mt-3">

                                <!-- Cancel Button -->
                                <div class="offset-1 col-lg-3 col-md-4 col-sm-6 form-group mt-3">
                                    <a asp-action="Index" class="btn btn-secondary form-control">Go Back to List</a>
                                </div>

                                @* <!-- No, Don't Delete --> *@
                                @* <div class="col-lg-3 col-md-4 col-sm-6 form-group mt-3"> *@
                                @*     <a asp-action="Index" class="btn btn-primary form-control">Cancel</a> *@
                                @* </div> *@

                                <!-- Yes, Delete -->
                                <div class="col-lg-3 col-md-4 col-sm-6 form-group mt-3">
                                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-1">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
